<Window x:Class="Trabajo_Gestion.LocalidadesConsulta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trabajo_Gestion"
        mc:Ignorable="d"
        Title="Consulta Localidades" Height="315" Width="585" MinWidth="585" MinHeight="315" MaxWidth="585" MaxHeight="315" WindowStartupLocation="CenterScreen" Icon="/descarga.png" Background="#FFFFE2E2">
